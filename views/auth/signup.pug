extends ../layout

block layout-content
    h1 Sign Up
    form(method="post", action="/auth/signup")
        div.mb-3
            label(class="form-label" for="name") Name
            input(type="text", id="name", class="form-control", required=true)
        div.mb-3
            label(class="form-label" for="username") Username
            input(type="text", id="username", class="form-control" required=true)
        div.mb-3
            label(class="form-label", for="password") Password
            input(type="password", id="password", class="form-control" required=true)
        button(type="submit", class="btn btn-primary") Go!
    div.text-center
        p Already have an account?
            a(href="/auth/signin") Sign in